@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Department</a>

@if(ViewData["Message1"] != null)
{
    <div class="alert alert-danger m-5">
        <h4>@ViewData["Message1"]</h4>
    </div>
}
@if (ViewBag.Message2 != null)
{
    <div class="alert alert-danger m-5">
        <h4>@ViewBag.Message2</h4>
    </div>
}
@if (TempData["Message3"] != null)
{
    <div class="alert alert-danger m-5">
        <h4>@TempData["Message3"]</h4>
    </div>
}
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>

                <partial name="_ButtonsViewPartial" model="@item.Id.ToString()" />
            </tr>
            }
        </tbody>
    </table> 
}
else { 
    <div class="alert alert-warning mt-5">
        <h3>No Departments Found</h3>
    </div>
}

